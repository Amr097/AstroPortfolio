---
export interface Props {
  class?: string;
  href?: string;
  hasArrow?: boolean;
}

const { class: className = '', href, hasArrow = false } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag
  {href}
  class={`
    bg-gray-900/50 border border-gray-800 rounded-xl p-6 
    hover:border-gray-700 transition-all duration-200
    ${href ? 'cursor-pointer hover:bg-gray-900/70' : ''}
    ${className}
  `}
>
  <div class="relative">
    <slot />
    {
      hasArrow && (
        <svg
          class="absolute top-2 right-2 h-4 w-4 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 17L17 7M17 7H7M17 7V17"
          />
        </svg>
      )
    }
  </div>
</Tag>
