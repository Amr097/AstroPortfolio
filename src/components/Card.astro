---
import CardContainer from './ui/containers/CardContainer.astro';

export interface Props {
  class?: string;
  href?: string;
}

const { class: className = '', href } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<CardContainer class={`${className}`}>
  <Tag
    {href}
    class={`
    ${href ? 'cursor-pointer ' : ''}
  `}
  >
    <div class="relative">
      <slot />
    </div>
  </Tag>
</CardContainer>
