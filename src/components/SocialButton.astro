---
export interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<a
  {href}
  class="bg-card-background border-card-border hover:border-card-border-hover relative z-10 flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border transition-all duration-200 hover:shadow-sm"
  aria-label={label}
>
  <slot />
</a>
