---
import DialBtn from './DialBtn.astro';

const icons = {
  home: '<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" /></svg>',

  search:
    '<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20"> <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"clip-rule="evenodd"/> </svg>',
};
---

<!-- Speed Dial Container -->
<div class="fixed right-6 bottom-6">
  <!-- Speed Dial Items (Hidden by default, shown on hover) -->
  <div
    class="mb-4 flex flex-col-reverse space-y-3 space-y-reverse bg-white transition-all duration-300"
  >
    <!-- Home Button -->
    <DialBtn icon={icons.home} label="Home" />
    <DialBtn icon={icons.search} label="Search" />
  </div>

  <!-- Main Speed Dial Button -->
  <button
    class="flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-white shadow-lg"
  >
    <!-- Plus Icon (default) -->
    <svg class="5 h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
      <path
        fill-rule="evenodd"
        d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
        clip-rule="evenodd"></path>
    </svg>
  </button>
</div>
