---
import Tooltip from './Tooltip.astro';

export interface Props {
  svg: string;
  label: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  ariaLabel?: string;
}

const sizeClasses = {
  sm: 'h-7 w-7', // 24px
  md: 'h-8 w-8', // 32px
  lg: 'h-10 w-10', // 40px
  xl: 'h-12 w-12', // 48px
} as const;

const {
  svg,
  label,
  class: className = '',
  size = 'md',
  ariaLabel,
} = Astro.props;
---

<div
  class={`group relative flex items-center justify-center ${sizeClasses[size]} ${className}`}
  aria-label={ariaLabel}
  tabindex="0"
>
  <span
    set:html={svg}
    class={`flex items-center justify-center ${sizeClasses[size]}`}
  />
  <Tooltip {label} />
</div>
