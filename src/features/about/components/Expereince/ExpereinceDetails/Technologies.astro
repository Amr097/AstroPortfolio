---
interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

{
  technologies && technologies.length > 0 && (
    <div class="mb-4">
      <h4 class="text-inverse mb-2 text-sm font-medium">Technologies Used:</h4>
      <div class="flex flex-wrap gap-2">
        {technologies.map((tech) => (
          <span class="bg-surface-900 text-text-700 border-border-300 rounded-md border px-2 py-1 text-xs font-medium shadow-xs">
            {tech}
          </span>
        ))}
      </div>
    </div>
  )
}
