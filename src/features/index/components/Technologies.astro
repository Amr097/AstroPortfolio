---
import icons from '../constants/skillsIcons.ts';
import IconTooltip from '@/components/ui/misc/IconTooltip.astro';
---

<div class="flex flex-col items-center gap-6 md:flex-row">
  <div class="flex-1">
    <h2 class="heading-2 text-inverse mb-6">Technologies I've worked with</h2>

    <div class="mb-4">
      <div class="flex flex-wrap gap-4">
        {
          Object.entries(icons.frontend).map(([name, svg]) => (
            <IconTooltip
              svg={svg}
              label={name}
              size="sm"
              class="group relative flex h-10 w-10 rounded-lg bg-white shadow-sm hover:-translate-y-0.5 hover:shadow-md"
            />
          ))
        }
      </div>
    </div>

    <div class="mb-4">
      <div class="flex flex-wrap gap-4">
        {
          Object.entries(icons.tools).map(([name, svg]) => (
            <IconTooltip
              svg={svg}
              label={name}
              size="sm"
              class="group relative flex h-10 w-10 rounded-lg bg-white shadow-sm hover:-translate-y-0.5 hover:shadow-md"
            />
          ))
        }
      </div>
    </div>

    <p class="text-text-600 mb-4 text-sm">
      <span class="text-accent-500 font-bold">P.S:</span> Iâ€™m not limited by any
      specific tech-stack and always open to exploring new technologies that better
      serve business requirements and constraints.
    </p>
  </div>
</div>
