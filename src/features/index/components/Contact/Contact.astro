---
import { Mail } from '@lucide/astro';
import DefaultBtn from '@/components/ui/btns/DefaultBtn.astro';
import CalendlyBtn from './CalendlyBtn.astro';
---

<section 
  class="flex flex-col items-center gap-6 md:flex-row"
  role="region"
  tabindex="0"
>
  <div class="flex-1">
    <header class="mb-6">
      <h2 id="contact-heading" class="heading-2 text-inverse">
        Have a project in mind?
      </h2>
      <p class="text-text-600 text-md">
        Let's <span class="text-accent-800  text-lg font-medium">communicate</span>
        and discuss what you have in mind.
      </p>
    </header>

    <div class="flex flex-col gap-2" role="group" aria-labelledby="contact-methods">
      <h3 id="contact-methods" class="sr-only">Contact Methods</h3>

      <aside class="sr-only" role="complementary" aria-label="Contact information note">
        <p class="sr-only">
          Two contact options are available: direct email for immediate communication, 
          or schedule a meeting through Calendly for a discussion about your project needs.
        </p>
      </aside>
      
      <DefaultBtn
        text="Email me"
        icon={Mail}
        href="mailto:your.email@example.com"
        aria-label="Send email"
        class="focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2"
        role="link"
      />

      <CalendlyBtn 
        class="focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2"
      />
    </div>

   
  </div>
</section>

<style>
  /* Screen reader only utility class */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowspace: nowrap;
    border: 0;
  }
</style>