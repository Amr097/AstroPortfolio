---
import BtnTriggerDialog from '@/components/ui/dialog/BtnTriggerDialog.astro';
import DefaultDialog from '@/components/ui/dialog/DefaultDialog.astro';
import ExperienceList from './ExperienceList.astro';
import ExperienceDetails from './ExperienceDetails.astro';
import { BriefcaseBusiness } from '@lucide/astro';

const modalId: string = 'experience-modal';
---

<div class="relative">
  <!-- Header with subtle info icon -->
  <div class="mb-6 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <BriefcaseBusiness class="h-6 w-6 text-white" aria-hidden="true" />
      <h3 class="text-lg font-medium text-white">Work experience</h3>
    </div>

    <BtnTriggerDialog ariaLabel="Show expereince details" {modalId} />
  </div>

  <!-- Experience List -->
  <ExperienceList />
</div>

<DefaultDialog {modalId} title="Experience Details" maxWidth="max-w-2xl">
  <ExperienceDetails />
</DefaultDialog>
