---
import experiences from '../constants/experiences.ts';
import Content from './ExpereinceDetails/Content.astro';
import Technologies from './ExpereinceDetails/Technologies.astro';
import Achievements from './ExpereinceDetails/Achievements.astro';
---

<div class="space-y-6 p-6">
  {
    experiences.map((exp, index) => (
      <div class="border-border-300 border-b pb-6 last:border-b-0 last:pb-0">
        <div class="mb-4 flex items-start gap-4">
          <div class="h-11 w-11 flex-shrink-0 overflow-hidden rounded-full bg-white">
            <img
              src={exp.logo || '/placeholder.svg'}
              alt={`${exp.company} logo`}
              class="h-full w-full object-contain"
            />
          </div>
          <div class="flex-1">
            <Content
              company={exp.company}
              position={exp.position}
              period={exp.period}
              description={exp.description}
            />

            {exp.technologies && exp.technologies.length > 0 && (
              <Technologies technologies={exp.technologies} />
            )}

            {exp.achievements && exp.achievements.length > 0 && (
              <Achievements achievements={exp.achievements} />
            )}
          </div>
        </div>
      </div>
    ))
  }
</div>
