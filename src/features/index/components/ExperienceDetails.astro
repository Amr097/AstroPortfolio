---
import experiences from '../constants/experiences.ts';
---

<div class="space-y-6 p-6">
  {
    experiences.map((exp, index) => (
      <div class="border-b border-[#2a2a2a] pb-6 last:border-b-0 last:pb-0">
        <div class="mb-4 flex items-start gap-4">
          <div class="h-11 w-11 flex-shrink-0 overflow-hidden rounded-full bg-white">
            <img
              src={exp.logo || '/placeholder.svg'}
              alt={`${exp.company} logo`}
              class="h-full w-full object-contain"
            />
          </div>
          <div class="flex-1">
            <div class="mb-2 flex items-center justify-between">
              <h3 class="text-lg font-semibold text-white">{exp.company}</h3>
              <span class="text-sm text-[#9ca3af]">{exp.period}</span>
            </div>
            <p class="mb-3 font-medium text-blue-400">{exp.position}</p>

            {exp.description && (
              <p class="mb-4 text-sm leading-relaxed text-[#9ca3af]">{exp.description}</p>
            )}

            {exp.technologies && exp.technologies.length > 0 && (
              <div class="mb-4">
                <h4 class="mb-2 text-sm font-medium text-white">Technologies Used:</h4>
                <div class="flex flex-wrap gap-2">
                  {exp.technologies.map((tech) => (
                    <span class="rounded-md bg-[#2a2a2a] px-2 py-1 text-xs text-[#9ca3af]">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {exp.achievements && exp.achievements.length > 0 && (
              <div>
                <h4 class="mb-2 text-sm font-medium text-white">Key Achievements:</h4>
                <ul class="space-y-1">
                  {exp.achievements.map((achievement) => (
                    <li class="flex items-start gap-2 text-sm text-[#9ca3af]">
                      <span class="mt-1 text-blue-400">â€¢</span>
                      <span>{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </div>
    ))
  }
</div>
