---
import SocialButton from '@/components/ui/btns/SocialButton.astro';
import { GithubIcon, Linkedin, Download } from '@lucide/astro';
---

<div class="flex flex-col items-center gap-6 md:flex-row">
  <div class="flex-1">
    <div class="mb-6 flex items-center justify-between gap-4">
      <div>
        <h1 class="heading-1 text-inverse">
          Amr Abdelghany
          <span class="text-accent-500 font-bold"></span>
        </h1>
        <h3 class="text-accent-500 text-lg">Frontend Engineer</h3>
      </div>

      <a
        href="https://drive.google.com/uc?export=download&id=1QE_RF75OjQggX6NNLPtOZwIa4hOdetPl"
        download
        class="bg-surface-900 border-border-900 hover:border-border-300 hover:bg-surface-700 inline-flex items-center gap-2 rounded-full border px-3 py-2 transition-all duration-200 ease-in-out hover:scale-x-100 hover:shadow-xs"
      >
        <span class="text-inverse label">Resume</span>
        <Download size={15} class="text-inverse" />
      </a>
    </div>

    <p class="text-text-600 text-md mb-4 leading-relaxed">
      Specialized in building responsive user-friendly interfaces for clients,
      ranging from established companies to innovative startups. My expertise
      lies in translating business requirements and Figma designs into
      user-friendly digital solutions.
    </p>
    <div class="flex flex-wrap gap-2">
      <SocialButton href="https://github.com/Amr097" label="GitHub">
        <GithubIcon size={20} class="text-inverse" />
      </SocialButton>
      <SocialButton
        href="https://www.linkedin.com/in/amrabdelghany/"
        label="LinkedIn"
      >
        <Linkedin size={20} class="text-inverse" />
      </SocialButton>
    </div>
  </div>
</div>
