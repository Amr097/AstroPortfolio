---
import '../styles/global.css';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import HeroContent from '../features/index/HeroContent.astro';
import HeroImage from '../features/index/HeroImage.astro';
---

<DefaultLayout>
  <div
    class="grid h-full grid-cols-1 grid-rows-1 items-center justify-between gap-6 p-2 sm:p-6 md:grid-cols-[1fr_max-content] md:gap-12"
  >
    <HeroContent />
    <HeroImage />
  </div>
</DefaultLayout>

<style>
  .float-animation {
    /* animation: float 4s ease-in-out infinite; */
  }

  .float-moon-animation {
    /* animation: float-moon 4s ease-in-out infinite; */
  }

  @keyframes float {
    0% {
      transform: translate(-0, 0);
    }
    50% {
      transform: translate(0, -2.5%);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  @keyframes float-moon {
    0% {
      transform: translate(-0, -2.5%);
    }
    50% {
      transform: translate(0, -5%);
    }
    100% {
      transform: translate(0, -2.5%);
    }
  }
</style>
