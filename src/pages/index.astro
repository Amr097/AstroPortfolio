---
import '../styles/global.css';
import Card from '../components/Card.astro';
import SocialButton from '../components/SocialButton.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout>
  <div class="">
    <!-- Grid Layout -->
    <div class="mt-34 grid grid-cols-[1fr_max-content_1fr] grid-rows-4 gap-4">
      <!-- Welcome Card - Spans 2 columns -->
      <Card class="col-span-1 col-start-1 row-span-2">
        <div class="flex flex-col items-center gap-6 md:flex-row">
          <div class="flex-1">
            <h1 class="mb-4 text-xl">
              Hello, I'm <span class="text-blue-400">Amr</span>, a Frontend Engineer
            </h1>
            <p class="mb-6 text-gray-300">
              Specialized in creating responsive and user-friendly interfaces for clients, ranging
              from established companies to innovative startups. My expertise lies in translating
              business requirements into user-friendly digital solutions.
            </p>
            <div class="mb-4 flex flex-wrap gap-2">
              <SocialButton href="https://github.com" icon="fab fa-github" label="GitHub" />
              <SocialButton href="https://linkedin.com" icon="fab fa-linkedin" label="LinkedIn" />
              <SocialButton href="https://dribbble.com" icon="fab fa-dribbble" label="Dribbble" />
              <SocialButton
                href="mailto:contact@example.com"
                icon="fas fa-envelope"
                label="Email"
              />
            </div>

            <button
              class="w-full rounded-lg bg-white px-4 py-2 text-sm font-medium text-black transition-colors hover:bg-gray-200"
            >
              Download CV
            </button>
          </div>
        </div>
      </Card>

      <!-- Tech Stack Card -->
      <Card class="col-start-1 row-span-2 row-start-3 md:col-span-1">
        <h2 class="mb-4 text-lg font-semibold">Tech Stack</h2>

        <div class="mb-4">
          <p class="mb-2 text-xs font-medium tracking-wide text-gray-400 uppercase">Proficient</p>
          <div class="flex flex-wrap gap-1 text-xs">
            <span class="rounded bg-blue-600/20 px-2 py-1 text-blue-300">JavaScript</span>
            <span class="rounded bg-blue-600/20 px-2 py-1 text-blue-300">React</span>
            <span class="rounded bg-blue-600/20 px-2 py-1 text-blue-300">Next.js</span>
            <span class="rounded bg-blue-600/20 px-2 py-1 text-blue-300">Tailwind</span>
          </div>
        </div>

        <div>
          <p class="mb-2 text-xs font-medium tracking-wide text-gray-400 uppercase">Comfortable</p>
          <div class="flex flex-wrap gap-1 text-xs">
            <span class="rounded bg-gray-600/20 px-2 py-1 text-gray-300">TypeScript</span>
            <span class="rounded bg-gray-600/20 px-2 py-1 text-gray-300">Node.js</span>
            <span class="rounded bg-gray-600/20 px-2 py-1 text-gray-300">Astro</span>
            <span class="rounded bg-gray-600/20 px-2 py-1 text-gray-300">Vue</span>
          </div>
        </div>
      </Card>

      <!-- Contact Card - Spans 2 columns for prominence -->
      <Card class="row-span-4 md:col-span-1 md:col-start-3">
        <h2 class="mb-4 text-lg font-semibold">Let's work together!</h2>
        <p class="mb-6 text-sm text-gray-300">
          Ready to bring your ideas to life? Get in touch and let's discuss your next project.
        </p>

        <div class="flex flex-col gap-3">
          <button
            class="flex-1 rounded-lg bg-blue-600 px-6 py-3 font-medium text-white transition-colors hover:bg-blue-700"
          >
            Contact Form
          </button>
          <button
            class="flex-1 rounded-lg border border-gray-600 px-6 py-3 font-medium text-gray-300 transition-colors hover:bg-gray-800"
          >
            Book a Call
          </button>
        </div>
      </Card>

      <!-- Experience Card -->
      <Card href="/experience" hasArrow={true} class="col-span-1 md:col-start-2 md:row-start-1">
        <h3 class="text-lg font-semibold">Experience</h3>
        <p class="mt-2 text-sm text-gray-400">View my work history</p>
      </Card>

      <!-- Projects Card -->
      <Card class="col-start-2 opacity-60">
        <h3 class="text-lg font-semibold">Projects</h3>
        <p class="mt-2 text-sm text-gray-400">Coming soon...</p>
      </Card>

      <!-- Projects Card -->
      <Card class="col-start-2 opacity-60">
        <h3 class="text-lg font-semibold">Projects</h3>
        <p class="mt-2 text-sm text-gray-400">Coming soon...</p>
      </Card>

      <!-- Blog Card -->
      <Card class="opacity-60 md:col-start-2">
        <h3 class="text-lg font-semibold">Blog</h3>
        <p class="mt-2 text-sm text-gray-400">Coming soon...</p>
      </Card>
    </div>
  </div>
</DefaultLayout>

