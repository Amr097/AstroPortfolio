---
import '../styles/global.css';

import CardContainer from '../components/ui/containers/CardContainer.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import About from '../features/index/components/About.astro';
import Technologies from '../features/index/components/Technologies.astro';
import Services from '../features/index/components/Services.astro';
import Experience from '../features/index/components/Expereince/Experience.astro';
import WorkInProgressBtn from '@/components/ui/btns/WorkInProgressBtn.astro';
import ChainIcon from '/chain-icon.svg?raw';
---

<DefaultLayout>
  <div class="">
    <!-- Grid Layout -->
    <!-- prettier-ignore -->
    <div
      class="py-3 sm:py-6 grid gap-4 grid-cols-[minmax(min-content,0.5fr)_min-content_min-content] grid-rows-2 
      "
    >

    <!-- prettier-ignore -->
   
        <!-- About Card -->
        <CardContainer class="lg:min-w-[200px] xl:min-w-[800px] col-start-1 row-start-1 col-span-2 row-span-1">
          <About />
        </CardContainer>

        <!-- Tech Stack Card -->
    
          <CardContainer class="col-start-1 col-span-1 row-start-2 row-span-1 w-max">
            <Technologies />
          </CardContainer>

         <div class="col-start-2 col-span-1 w-80 grid grid-rows-3 gap-4">
        
        <CardContainer class="row-start-1 row-span-1">
          <Experience/>
         </CardContainer>


         <CardContainer  class='row-span-1 row-start-2 relative overflow-hidden cursor-not-allowed'>
          <WorkInProgressBtn 
          text="Projects" 
          icon={ChainIcon} 
          ribbon={true} 
          ribbonText="WIP" 
        />


        </CardContainer>
          <CardContainer  class='row-span-1 row-start-3 relative overflow-hidden cursor-not-allowed'>
            <WorkInProgressBtn 
            text="Projects" 
            icon={ChainIcon} 
            ribbon={true} 
            ribbonText="WIP" 
          />

        </CardContainer>
         </div>

       

      <!-- Services Card -->
      <CardContainer
        class='row-start-1 row-span-2 col-start-3 col-span-1'
      >
        <Services />
      </CardContainer>

   
        <!-- Experience Card -->
        <!-- <CardContainer class="col-start-1 col-span-1"
        >
          <Experience />
        </CardContainer> -->

        <!--  Contact Card -->
        <!-- <CardContainer  class='col-start-2 col-span-2 flex justify-center items-center'>
          <Contact />
        </CardContainer>
     -->
    </div>
  </div>
</DefaultLayout>
