---
import '../styles/global.css';

import CardContainer from '../components/ui/containers/CardContainer.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import About from '../features/about/components/About.astro';
import Technologies from '../features/about/components/Technologies.astro';
import Services from '../features/about/components/Services.astro';
import Experience from '../features/about/components/Expereince/Experience.astro';
import Contact from '../features/about/components/Contact/Contact.astro';
---

<DefaultLayout>
  <div class="">
    <!-- Grid Layout -->
    <!-- prettier-ignore -->
    <div
      class="mt-10 grid grid-cols-1 gap-4 
      md:grid-cols-2 
      lg:grid-cols-[1fr_minmax(22rem,0.5fr)] 
      xl:grid-cols-[1.85fr_1fr_1fr]"
    >

    <!-- prettier-ignore -->
      <div
        class="col-start-1 row-start-1 grid grid-cols-1 grid-rows-[1fr_1fr] gap-4 
        md:col-span-2 md:row-span-1 
        lg:col-span-1 lg:col-start-1 
        xl:col-span-1 xl:row-span-2"
      >
        <!-- About Card -->
        <CardContainer class="row-start-1 flex items-center">
          <About />
        </CardContainer>

        <!-- Tech Stack Card -->
        <CardContainer class="row-start-2 flex items-center">
          <Technologies />
        </CardContainer>
      </div>

      <!-- Services Card -->
      <CardContainer
        class='row-span-2 md:col-span-1 md:col-start-1 md:row-start-2 lg:col-span-1 lg:col-start-2 lg:row-span-1 lg:row-start-1 xl:col-start-2 xl:row-span-2 xl:row-start-1'
      >
        <Services />
      </CardContainer>

      <div
        class="row-span-2 grid grid-cols-1 grid-rows-[1fr_1fr] gap-4 sm:grid-cols-2 md:col-start-2 md:row-start-2 md:grid-cols-1 lg:col-span-2 lg:col-start-1 lg:grid-cols-[1fr_minmax(22rem,0.5fr)] xl:col-start-3 xl:row-start-1 xl:grid-cols-1"
      >
        <!-- Experience Card -->
        <CardContainer>
          <Experience />
        </CardContainer>

        <!--  Contact Card -->
        <CardContainer class='flex justify-center items-center'>
          <Contact />
        </CardContainer>
      </div>
    </div>
  </div>
</DefaultLayout>
