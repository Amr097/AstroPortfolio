---
import '../styles/global.css';

import CardContainer from '../components/ui/containers/CardContainer.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import About from '../features/about/components/About.astro';
import Technologies from '../features/about/components/Technologies.astro';
import Services from '../features/about/components/Services.astro';
import Experience from '../features/about/components/Expereince/Experience.astro';
import Contact from '../features/about/components/Contact/Contact.astro';
---

<DefaultLayout>
  <div class="">
    <!-- Grid Layout -->
    <!-- prettier-ignore -->
    <div
      class="py-3 sm:py-6 grid gap-4 grid-cols-[minmax(min-content,0.5fr)_min-content_min-content] grid-rows-2 
      "
    >

    <!-- prettier-ignore -->
   
        <!-- About Card -->
        <CardContainer class="lg:min-w-[200px] xl:min-w-[800px] col-start-1 row-start-1 col-span-2 row-span-1">
          <About />
        </CardContainer>

        <!-- Tech Stack Card -->
    
          <CardContainer class="col-start-1 col-span-1 row-start-2 row-span-1">
            <Technologies />
          </CardContainer>

         <div class="col-start-2 col-span-1 w-50 grid grid-rows-3">
          <div class="w-full  bg-blue-600"></div>
          <div class="w-full  bg-green-600"></div>
          <div class="w-full  bg-red-600"></div>
         </div>

       

      <!-- Services Card -->
      <CardContainer
        class='row-start-1 row-span-2 col-start-3 col-span-1'
      >
        <Services />
      </CardContainer>

   
        <!-- Experience Card -->
        <!-- <CardContainer class="col-start-1 col-span-1"
        >
          <Experience />
        </CardContainer> -->

        <!--  Contact Card -->
        <!-- <CardContainer  class='col-start-2 col-span-2 flex justify-center items-center'>
          <Contact />
        </CardContainer>
     -->
    </div>
  </div>
</DefaultLayout>
